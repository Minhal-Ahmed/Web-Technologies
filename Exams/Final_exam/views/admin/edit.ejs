<%- include('../../partials/header', { title: 'Edit Vehicle' }) %>
<div class="container mt-5">
  <h2>Edit Vehicle</h2>
  <form action="/admin/vehicles/edit/<%= vehicle._id %>" method="POST" enctype="multipart/form-data">
    <input name="name" class="form-control mb-3" value="<%= vehicle.name %>" required>
    <input name="brand" class="form-control mb-3" value="<%= vehicle.brand %>" required>
    <input name="price" class="form-control mb-3" type="number" value="<%= vehicle.price %>" required>
    <input name="type" class="form-control mb-3" value="<%= vehicle.type %>" required>
    <label>Replace Image (optional):</label>
    <input name="image" class="form-control mb-3" type="file">
    <button class="btn btn-primary">Update</button>
  </form>
</div>
