<%- include('../../partials/header', { title: 'Add Vehicle' }) %>
<div class="container mt-5">
  <h2>Add New Vehicle</h2>
  <form action="/admin/vehicles/add" method="POST" enctype="multipart/form-data">
    <input name="name" class="form-control mb-3" placeholder="Name" required>
    <input name="brand" class="form-control mb-3" placeholder="Brand" required>
    <input name="price" class="form-control mb-3" type="number" placeholder="Price" required>
    <input name="type" class="form-control mb-3" placeholder="Type (e.g. SUV)" required>
    <input name="image" class="form-control mb-3" type="file">
    <button class="btn btn-success">Add</button>
  </form>
</div>
