
    <style>
        body {
            background: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }
        
        .success-header {
            background: linear-gradient(135deg, #198754 0%, #146c43 100%);
            color: white;
            padding: 3rem 0;
            text-align: center;
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.2);
        }
        
        .success-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            animation: bounceIn 1s ease-out;
        }
        
        @keyframes bounceIn {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); opacity: 1; }
        }
        
        .confirmation-container {
            max-width: 800px;
            margin: -2rem auto 2rem;
            padding: 0 15px;
            position: relative;
            z-index: 10;
        }
        
        .confirmation-card {
            background: white;
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            border: 3px solid #e8f5e8;
        }
        
        .order-id {
            background: linear-gradient(135deg, #e8f5e8 0%, #d1e7dd 100%);
            padding: 1rem 1.5rem;
            border-radius: 10px;
            text-align: center;
            margin: 1.5rem 0;
            border: 2px solid #198754;
        }
        
        .order-id strong {
            color: #198754;
            font-size: 1.2rem;
        }
        
        .section-title {
            color: #198754;
            font-weight: 700;
            font-size: 1.4rem;
            margin: 2rem 0 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border-bottom: 2px solid #e8f5e8;
            padding-bottom: 0.5rem;
        }
        
        .customer-info {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
        }
        
        .info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            padding: 0.25rem 0;
        }
        
        .info-label {
            font-weight: 600;
            color: #6c757d;
        }
        
        .info-value {
            color: #212529;
            text-align: right;
            max-width: 60%;
        }
        
        .order-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            margin-bottom: 1rem;
            background: #fff;
        }
        
        .item-image {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            margin-right: 1rem;
        }
        
        .item-placeholder {
            width: 60px;
            height: 60px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: #6c757d;
        }
        
        .item-details {
            flex: 1;
        }
        
        .item-name {
            font-weight: 600;
            color: #212529;
            margin-bottom: 0.25rem;
        }
        
        .item-meta {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .item-total {
            text-align: right;
            font-weight: 600;
            color: #198754;
        }
        
        .price-summary {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }
        
        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.75rem;
            color: #6c757d;
        }
        
        .total-row {
            display: flex;
            justify-content: space-between;
            font-size: 1.3rem;
            font-weight: 700;
            color: #198754;
            padding-top: 1rem;
            border-top: 2px solid #198754;
            margin-top: 1rem;
        }
        
        .status-badge {
            background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }
        
        .btn-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #198754 0%, #146c43 100%);
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(25, 135, 84, 0.4);
        }
        
        .btn-secondary {
            background: #6c757d;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
        
        .next-steps {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border: 2px solid #2196f3;
            border-radius: 15px;
            padding: 1.5rem;
            margin-top: 2rem;
        }
        
        .next-steps h5 {
            color: #1976d2;
            margin-bottom: 1rem;
        }
        
        .next-steps ul {
            margin: 0;
            padding-left: 1.5rem;
        }
        
        .next-steps li {
            margin-bottom: 0.5rem;
            color: #424242;
        }
        
        @media (max-width: 768px) {
            .confirmation-card {
                padding: 1.5rem;
                margin: -1rem 15px 2rem;
            }
            
            .success-header {
                padding: 2rem 0;
            }
            
            .success-icon {
                font-size: 3rem;
            }
            
            .btn-group {
                flex-direction: column;
            }
            
            .info-row {
                flex-direction: column;
                gap: 0.25rem;
            }
            
            .info-value {
                text-align: left;
                max-width: 100%;
            }
        }
    </style>
<body>
    <!-- Success Header -->
    <div class="success-header">
        <div class="container">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="display-4 mb-0">Order Confirmed!</h1>
            <p class="lead mb-0">Thank you for your purchase</p>
        </div>
    </div>

    <div class="confirmation-container">
        <div class="confirmation-card">
            <!-- Order ID -->
            <div class="order-id">
                <p class="mb-1">Your Order ID</p>
                <strong><%= order._id %></strong>
            </div>

            <!-- Order Status -->
            <div class="text-center mb-4">
                <span class="status-badge">
                    <i class="fas fa-clock me-1"></i>
                    <%= order.status.toUpperCase() %>
                </span>
            </div>

            <!-- Customer Information -->
            <h3 class="section-title">
                <i class="fas fa-user"></i>
                Customer Information
            </h3>
            
            <div class="customer-info">
                <div class="info-row">
                    <span class="info-label">Name:</span>
                    <span class="info-value"><%= order.customerInfo.firstName %> <%= order.customerInfo.lastName %></span>
                </div>
                <div class="info-row">
                    <span class="info-label">Email:</span>
                    <span class="info-value"><%= order.customerInfo.email %></span>
                </div>
                <div class="info-row">
                    <span class="info-label">Phone:</span>
                    <span class="info-value"><%= order.customerInfo.phone %></span>
                </div>
                <div class="info-row">
                    <span class="info-label">Delivery Address:</span>
                    <span class="info-value">
                        <%= order.customerInfo.address %><br>
                        <%= order.customerInfo.city %>
                    </span>
                </div>
                <div class="info-row">
                    <span class="info-label">Order Date:</span>
                    <span class="info-value"><%= new Date(order.orderDate).toLocaleDateString('en-GB', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                    }) %></span>
                </div>
                <div class="info-row">
                    <span class="info-label">Payment Method:</span>
                    <span class="info-value">
                        <i class="fas fa-money-bill-wave me-1"></i>
                        Cash on Delivery
                    </span>
                </div>
            </div>

            <!-- Order Items -->
            <h3 class="section-title">
                <i class="fas fa-shopping-bag"></i>
                Order Items
            </h3>

            <% order.items.forEach(item => { %>
                <div class="order-item">
                    <% if (item.image) { %>
                        <img src="/<%= item.image %>" alt="<%= item.title %>" class="item-image">
                    <% } else { %>
                        <div class="item-placeholder">
                            <i class="fas fa-image"></i>
                        </div>
                    <% } %>
                    <div class="item-details">
                        <div class="item-name"><%= item.title %></div>
                        <div class="item-meta">
                            Quantity: <%= item.quantity %> Ã— Â£<%= item.price.toFixed(2) %>
                        </div>
                    </div>
                    <div class="item-total">
                        Â£<%= (item.price * item.quantity).toFixed(2) %>
                    </div>
                </div>
            <% }) %>

            <!-- Price Summary -->
            <div class="price-summary">
                <div class="price-row">
                    <span>Subtotal:</span>
                    <span>Â£<%= order.subtotal.toFixed(2) %></span>
                </div>
                <div class="price-row">
                    <span>Shipping:</span>
                    <span>Â£<%= order.shipping.toFixed(2) %></span>
                </div>
                <div class="price-row">
                    <span>Tax (8%):</span>
                    <span>Â£<%= order.tax.toFixed(2) %></span>
                </div>
                <div class="total-row">
                    <span>Total Paid:</span>
                    <span>Â£<%= order.total.toFixed(2) %></span>
                </div>
            </div>

            <!-- Next Steps -->
            <div class="next-steps">
                <h5><i class="fas fa-info-circle me-2"></i>What happens next?</h5>
                <ul>
                    <li><strong>Order Processing:</strong> We'll prepare your order within 1-2 business days</li>
                    <li><strong>Delivery:</strong> Our delivery partner will contact you to schedule delivery</li>
                    <li><strong>Payment:</strong> Pay in cash when your order arrives at your doorstep</li>
                    <li><strong>Confirmation:</strong> You'll receive an email confirmation shortly</li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="btn-group">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>
                    Continue Shopping
                </a>
                
        </div>
    </div>

