<style>
  .cart-hero {
    background: #93c996;
    color: white;
    padding: 40px 0;
    margin-bottom: 40px;
    text-align: center;
  }

  .cart-hero h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }

  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .cart-table {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    margin-bottom: 30px;
  }

  .cart-table .table {
    margin-bottom: 0;
  }

  .cart-table th {
    background: #93c996!important;
    color: white !important;
    font-weight: 600;
    border: none !important;
    padding: 20px 15px;
    font-size: 1.1rem;
  }

  .cart-table td {
    vertical-align: middle;
    padding: 20px 15px;
    border-color: #f8f9fa;
  }

  .product-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .product-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .product-name {
    font-weight: 600;
    color: #2c3e50;
    font-size: 1.1rem;
  }

  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 10px;
    background: #f8f9fa;
    border-radius: 25px;
    padding: 5px;
    width: fit-content;
  }

  .quantity-btn {
    background: #667eea;
    color: white;
    border: none;
    border-radius: 50%;
    width: 35px;
    height: 35px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    font-weight: bold;
  }

  .quantity-btn:hover {
    background: #5a6fd8;
    transform: scale(1.1);
  }

  .quantity-btn:disabled {
    background: #bdc3c7;
    cursor: not-allowed;
    transform: none;
  }

  .quantity-input {
    border: none;
    background: transparent;
    text-align: center;
    width: 50px;
    font-weight: 600;
    color: #2c3e50;
  }

  .quantity-input:focus {
    outline: none;
    box-shadow: none;
  }

  .remove-btn {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    border: none;
    border-radius: 20px;
    padding: 8px 15px;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .remove-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
  }

  .price-cell {
    font-size: 1.1rem;
    font-weight: 600;
    color: #27ae60;
  }

  .subtotal-cell {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2c3e50;
  }

  .cart-summary {
    background: white;
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    margin-bottom: 30px;
  }

  .total-amount {
    font-size: 2rem;
    font-weight: 700;
    color: #27ae60;
  }

  .checkout-btn {
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    border: none;
    border-radius: 50px;
    padding: 15px 40px;
    font-size: 1.2rem;
    font-weight: 600;
    color: white;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .checkout-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(39, 174, 96, 0.4);
    color: white;
    text-decoration: none;
  }

  .continue-shopping {
    background: transparent;
    border: 2px solid #667eea;
    color: #667eea;
    border-radius: 50px;
    padding: 12px 30px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
  }

  .continue-shopping:hover {
    background: #667eea;
    color: white;
    text-decoration: none;
  }

  .empty-cart {
    text-align: center;
    background: white;
    border-radius: 15px;
    padding: 60px 40px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .empty-cart-icon {
    font-size: 4rem;
    color: #bdc3c7;
    margin-bottom: 20px;
  }

  .empty-cart h3 {
    color: #7f8c8d;
    margin-bottom: 15px;
  }

  .empty-cart p {
    color: #95a5a6;
    font-size: 1.1rem;
    margin-bottom: 30px;
  }

  @media (max-width: 768px) {
    .cart-hero h2 {
      font-size: 2rem;
    }
    
    .product-info {
      flex-direction: column;
      text-align: center;
      gap: 10px;
    }
    
    .quantity-controls {
      margin: 0 auto;
    }
    
    .cart-summary {
      padding: 20px;
    }
    
    .total-amount {
      font-size: 1.5rem;
    }
  }
</style>

<div class="cart-hero">
  <div class="container">
    <h2>Your Shopping Cart</h2>
    <p>Review your items and proceed to checkout</p>
  </div>
</div>

<div class="cart-container">
  <% if (cart.length === 0) { %>
    <div class="empty-cart">
      <div class="empty-cart-icon">üõçÔ∏è</div>
      <h3>Your cart is empty</h3>
      <p>Looks like you haven't added any items to your cart yet. Start shopping to fill it up!</p>
      <a href="/product" class="checkout-btn">Start Shopping</a>
    </div>
  <% } else { %>
    <div class="cart-table">
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach(item => { %>
            <tr>
              <td>
                <div class="product-info">
                  <% if (item.image) { %>
                    <img src="/<%= item.image %>" alt="<%= item.productName %>" class="product-image">
                  <% } %>
                  <span class="product-name"><%= item.productName %></span>
                </div>
              </td>
              <td class="price-cell">¬£<%= item.price.toFixed(2) %></td>
              <td>
                <form action="/update-quantity" method="POST" id="quantity-form-<%= item.productId %>">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <div class="quantity-controls">
                    <button type="button" class="quantity-btn" onclick="changeQuantity('<%= item.productId %>', -1, <%= item.quantity %>)">‚àí</button>
                    <input type="number" name="quantity" value="<%= item.quantity %>" 
                           min="1" max="99" class="quantity-input" 
                           onchange="updateQuantity('<%= item.productId %>')">
                    <button type="button" class="quantity-btn" onclick="changeQuantity('<%= item.productId %>', 1, <%= item.quantity %>)">+</button>
                  </div>
                </form>
              </td>
              <td class="subtotal-cell">¬£<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/remove-from-cart" method="POST" style="display: inline;">
                  <input type="hidden" name="productId" value="<%= item.productId %>">
                  <button type="submit" class="remove-btn" 
                          onclick="return confirm('Remove this item from your cart?')">
                    Remove
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    
    <div class="cart-summary">
      <div class="row align-items-center">
        <div class="col-md-6">
          <a href="/product" class="continue-shopping">
            ‚Üê Continue Shopping
          </a>
        </div>
        <div class="col-md-6 text-end">
          <div class="mb-3">
            <span style="font-size: 1.2rem; color: #7f8c8d;">Total Amount:</span>
            <div class="total-amount">¬£<%= total.toFixed(2) %></div>
          </div>
          <a href="/checkout" class="checkout-btn">
            Proceed to Checkout ‚Üí
          </a>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script>
function changeQuantity(productId, change, currentQuantity) {
  const form = document.getElementById('quantity-form-' + productId);
  const input = form.querySelector('input[name="quantity"]');
  const newQuantity = Math.max(1, Math.min(99, currentQuantity + change));
  
  input.value = newQuantity;
  updateQuantity(productId);
}

function updateQuantity(productId) {
  const form = document.getElementById('quantity-form-' + productId);
  const input = form.querySelector('input[name="quantity"]');
  
  // Ensure quantity is within valid range
  if (input.value < 1) input.value = 1;
  if (input.value > 99) input.value = 99;
  
  // Submit the form
  form.submit();
}

// Auto-submit quantity changes after user stops typing
let quantityTimeout;
document.querySelectorAll('.quantity-input').forEach(input => {
  input.addEventListener('input', function() {
    clearTimeout(quantityTimeout);
    const productId = this.closest('form').querySelector('input[name="productId"]').value;
    
    quantityTimeout = setTimeout(() => {
      updateQuantity(productId);
    }, 1000); // Update after 1 second of no typing
  });
});
</script>
